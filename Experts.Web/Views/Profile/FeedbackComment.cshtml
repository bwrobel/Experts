@model Experts.Web.Models.Forms.FeedbackCommentForm

<div class="modal fade" id="feedbackCommentModal">
    @using (Html.BeginForm(MVC.Profile.FeedbackCommentForm(), FormMethod.Post))
    {
        <div class="modal-header">
            <a class="close" data-dismiss="modal">×</a>
            <h3>@Resources.Thread.ThreadFeedbackCommentTitle</h3>
        </div>
        <div class="modal-body">
            @Html.EditorForModel()
        </div>
        <div class="modal-footer">
            <a class="btn" data-dismiss="modal">@Resources.Forms.Cancel</a>
            <input type="submit" class="btn btn-primary" value="@Resources.Global.Send" />
        </div> 
    }
</div>

<script type="text/javascript">
    $(function () {
        $('#feedbackCommentModal').modal({
            show: false
        });
    });
</script>
