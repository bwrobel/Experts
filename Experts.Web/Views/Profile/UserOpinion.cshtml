@using Experts.Core.Entities
@using Experts.Web.Helpers
@model Experts.Web.Models.Forms.OpinionForm

<div class="modal fade" id="OpinionModal" style="display: none;">
    @using (Html.BeginForm(MVC.Profile.UserOpinion()))
    {
        <div class="modal-header">
            <a class="close" data-dismiss="modal">×</a>
            <h3>@Resources.Account.OpinionTitle</h3>
        </div>
        <div class="modal-body">
            <div>
                @Html.LabelFor(model => model.OpinionContent)
                @Html.TextAreaFor(model => model.OpinionContent, new { placeholder = Resources.Account.OpinionContentEnterText, required = "required" })
            </div>

            <div>
                @Html.LabelFor(model => model.AddressCity)
                @Html.TextBoxFor(model => model.AddressCity, new { placeholder = Resources.Account.AddressCityEnterText})
            </div>

            <div>
                @Html.LabelFor(model => model.OpinionMark)
                @Html.RadioButtonFor(model => model.OpinionMark, OpinionMark.Positive, new {@checked = Model.OpinionMark == OpinionMark.Positive}) @OpinionMark.Positive.Describe(Resources.Account.ResourceManager)
                @Html.RadioButtonFor(model => model.OpinionMark, OpinionMark.Negative, Model.OpinionMark == OpinionMark.Negative) @OpinionMark.Negative.Describe(Resources.Account.ResourceManager)
            </div>
        </div>
        <div class="modal-footer">
            <a class="btn" data-dismiss="modal">@Resources.Forms.Cancel</a>
            <input type="submit" class="btn btn-primary" value="@Resources.Global.Send" />
        </div> 
    }
</div>

<script type="text/javascript">
    $(function () {
        $('#OpinionModal').modal({
            show: false
        });
    });
</script>

