@model Experts.Web.Models.Forms.IncreaseExpertValueForm

<div class="modal fade" id="increaseExpertValueModal">
    @using (Html.BeginForm(MVC.Thread.IncreaseExpertValue(), FormMethod.Post, new { id = "increaseExpertValueForm" }))
    {
        <div class="modal-header">
            <a class="close" data-dismiss="modal">×</a>
            <h3>@Resources.Thread.IncreaseExpertValueFormTitle</h3>
        </div>
        <div class="modal-body">
            @Html.EditorForModel()
        </div>
        <div class="modal-footer">
            <a class="btn" data-dismiss="modal">@Resources.Forms.Cancel</a>
            <a class="btn btn-primary" id="submitIncreaseExpertValue" data-dismiss="modal">@Resources.Forms.SaveChanges</a>
        </div> 
    }
</div>

<script type="text/javascript">
    $(function () {
        $('#increaseExpertValueModal').modal({
            show: false
        });

        $('#submitIncreaseExpertValue').click(function () {
            $.post('/Thread/IncreaseExpertValue', $('#increaseExpertValueForm').serialize(), function (result) {
                if (result) {
                    $('#increaseExpertValueModal').replaceWith(result);
                    $('#increaseExpertValueModal').modal({ show: true });
                } else {
                    window.location.reload();
                }
            });
        });
    });
    

</script>
