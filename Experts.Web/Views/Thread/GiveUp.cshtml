@model Experts.Web.Models.Forms.GiveUpForm

<div class="modal fade" id="GiveUpModal" style="display: none;">
    @using (Html.BeginForm(MVC.Thread.GiveUp(), FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="modal-header">
            <a class="close" data-dismiss="modal">×</a>
            <h3>@Resources.Thread.ThreadGiveUpCommentRequired</h3>
        </div>
        <div class="modal-body">
            @Html.EditorForModel()
        </div>
        <div class="modal-footer">
            <a class="btn" data-dismiss="modal">@Resources.Forms.Cancel</a>
            <input type="submit" class="btn btn-primary" value="@Resources.Global.Send" />
        </div>
    }
</div>

<script type="text/javascript">
    $(function () {
        $('#GiveUpModal').modal({
            show: false
        });
    });
</script>